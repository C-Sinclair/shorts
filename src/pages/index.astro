---
import { db } from '~/db'
import { ShortItem } from '~/components'
import PageLayout from '~/layouts/PageLayout.astro'

const shorts = await db.short.findMany() 
---
<PageLayout>
  <ul class='px-8 flex flex-wrap'>
    {shorts.map(short => (
      <li>
        <ShortItem client:idle short={short} />
      </li>
    ))}
  </ul>
</PageLayout>
